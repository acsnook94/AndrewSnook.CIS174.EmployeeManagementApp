@model AndrewSnook.CIS174.EmployeeManagementApp.Web.Models.EmployeeDisplayModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View Anniversaries</title>

    <style>
        .table-responsive {
            border: 1px solid black;
        }

        .btn {
            width: 133px;
        }
    </style>

</head>
<body>
    <div class="container">
        <h2>All Employees</h2>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Department</th>
                        <th>Years Employed</th>
                        <th>Anniversary</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model.Employees)
                    {
                        <tr>
                            <td>
                                @employee.FirstName
                            </td>
                            <td>
                                @employee.LastName
                            </td>
                            <td>
                                @employee.Department
                            </td>
                            <td>
                                @employee.HireDateYearsSince
                            </td>
                            <td>
                                @employee.HireAnniversary
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row float-right last-row">
            <input type="button" class="btn btn-primary" value="Create New" onclick="location.href='@Url.Action("Create")'" />
        </div>

    </div>
</body>
</html>