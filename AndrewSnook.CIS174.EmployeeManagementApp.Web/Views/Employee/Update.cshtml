@model AndrewSnook.CIS174.EmployeeManagementApp.Web.Models.UpdateEmployeeModel


<div class="container">
    <h2>Update Employee</h2>
    <br />

        <div class="row form-group">
            <div class="col-md-2 col-form-label">
                <label>Search Name</label>
            </div>
            <div class="col-md-8">
                <input id="searchString" type="text" class="form-control" />
            </div>
            <div class="col-md-1">
                <button class="btn btn-primary form-control" onclick="searchEmployee()">Search</button>
            </div>
        </div>
        <hr />


        <div id="successMessage" class="hidden alert alert-success">
            Successfully Updated!
        </div>
        <div id="errorMessage" class="hidden alert alert-danger">
            Error Occurred!
        </div>

        <input id="employeeId" type="hidden" />

        <div class="row form-group">
            <div class="col-md-2 col-form-label">
                <label>First Name</label>
            </div>
            <div class="col-md-3">
                <input id="firstName" type="text" class="form-control" />
            </div>

            <div class="col-md-1 col-form-label offset-2">
                <label>Department</label>
            </div>
            <div class="col-md-3 offset-1">
                <input id="department" type="text" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 col-form-label">
                <label>Middle Initial</label>
            </div>
            <div class="col-md-3">
                <input id="middleInitial" type="text" class="form-control" />
            </div>

            <div class="col-md-2 col-form-label offset-2">
                <label>Job Title</label>
            </div>
            <div class="col-md-3">
                <input id="jobTitle" type="text" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 col-form-label">
                <label>Last Name</label>
            </div>
            <div class="col-md-3">
                <input id="lastName" type="text" class="form-control" />
            </div>
            <div class="col-md-2 col-form-label offset-2">
                <label>Salary</label>
            </div>

            <span class="col-md-2">
                <input id="salary" type="number" class="form-control" />
                @*<input id="salaryType" type="" class="form-control" />*@
                @Html.EnumDropDownListFor(model => model.SalaryType, "Select", new { @class = "form-control", id = "salaryType" })
            </span>
        </div>

        <div class="col-md-12">
            <div class="col-md-6">
                <label>Birth Date</label>
            </div>
            <div class="col-md-6">
                <input id="birthDate" type="date" class="form-control" />
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6">
                <label>Employee Id</label>
            </div>
            <div class="col-md-6">
                <input id="employeeId" type="text" class="form-control" />
            </div>
        </div>

        <div class="col-md-12">
            <div class="col-md-6">
                <label>Hire Date</label>
            </div>
            <div class="col-md-6">
                <input id="hireDate" type="date" class="form-control" />
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6">
                <label>Available Hours</label>
            </div>
            <div class="col-md-6">
                <input id="availableHours" type="text" class="form-control" />
            </div>
        </div>

    <div class="col-md-12">
        <button class="btn btn-secondary margin-top-md margin-left-md" onclick="updateEmployee()">Save</button>
    </div>

</div>
    
