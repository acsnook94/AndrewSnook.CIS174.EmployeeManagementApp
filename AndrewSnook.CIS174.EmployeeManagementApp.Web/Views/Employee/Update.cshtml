@model AndrewSnook.CIS174.EmployeeManagementApp.Web.Models.UpdateEmployeeModel


<div class="container">
    <h2>Update Employee</h2>
    <br />

    <div class="row form-group">
        <div class="col-md-2 col-form-label">
            <label>Search Name</label>
        </div>
        <div class="col-md-7">
            <input id="searchString" type="text" class="form-control" />
        </div>
        <div class="col-md-2 offset-md-1">
            <button class="btn btn-primary float-md-right" id="search-btn" onclick="searchEmployee()">Search</button>
        </div>
    </div>
    <hr style="border: thin solid black; margin-top: 50px; margin-bottom: 50px;" />


    <div id="successMessage" class="hidden alert alert-success">
        Successfully Updated!
    </div>
    <div id="errorMessage" class="hidden alert alert-danger">
        Error Occurred!
    </div>

    <input id="employeeId" type="hidden" />

    <div class="row form-group">
        <div class="col-md-2 col-form-label">
            <label>First Name</label>
        </div>
        <div class="col-md-3">
            <input id="firstName" type="text" class="form-control" />
        </div>

        <div class="col-md-1 col-form-label offset-md-2">
            <label>Department</label>
        </div>
        <div class="col-md-3 offset-md-1">
            <input id="department" type="text" class="form-control" />
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-2 col-form-label">
            <label>Middle Initial</label>
        </div>
        <div class="col-md-3">
            <input id="middleInitial" type="text" class="form-control" />
        </div>

        <div class="col-md-2 col-form-label offset-md-2">
            <label>Job Title</label>
        </div>
        <div class="col-md-3">
            <input id="jobTitle" type="text" class="form-control" />
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-2 col-form-label">
            <label>Last Name</label>
        </div>
        <div class="col-md-3">
            <input id="lastName" type="text" class="form-control" />
        </div>

        <div class="col-md-2 col-form-label offset-md-2">
            <label>Salary</label>
        </div>
        <div class="col-md-3 input-group">
            <input id="salary" type="number" class="form-control col-md-6" />
            @*<input id="salaryType" type="" class="form-control" />*@
            @Html.EnumDropDownListFor(model => model.SalaryType, "Select", new { @class = "form-control col-md-6", id = "salaryType" })

            @*@{
                var salTypeEnumList = new List<SelectListItem>
                {
                new SelectListItem { Text = "Type:", Value = "" },
                new SelectListItem { Text = "Hourly", Value = "1" },
                new SelectListItem { Text = "Annual", Value = "2" },
                };
            }

            @Html.DropDownListFor(model => model.SalaryType, salTypeEnumList , new { @class = "form-control col-md-6", id = "salaryType" })*@
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-2 col-form-label">
            <label>Birth Date</label>
        </div>
        <div class="col-md-3">
            <input id="birthDate" type="date" class="form-control" />
        </div>

        <div class="col-md-2 col-form-label offset-md-2">
            <label>Employee Id</label>
        </div>
        <div class="col-md-3">
            <input id="employeeId" type="text" class="form-control" />
        </div>
    </div>

    <div class="row form-group margin-bottom-md">
        <div class="col-md-2 col-form-label">
            <label>Hire Date</label>
        </div>
        <div class="col-md-3">
            <input id="hireDate" type="date" class="form-control" />
        </div>

        <div class="col-md-2 col-form-label offset-md-2">
            <label>Available Hours</label>
        </div>
        <div class="col-md-3">
            <input id="availableHours" type="text" class="form-control" />
        </div>
    </div>

    <div class="container last-row">
        <div class="col-md-12">
            <span class="col-md-4 offset-md-8">
                <button class="btn btn-primary col-md-2 margin-top-md" onclick="updateEmployee()">Save</button>
                <button class="btn btn-secondary col-md-2 margin-top-md" onclick="clearFields()">Clear</button>
            </span>
        </div>
    </div>

</div>
    
